<div class="align">
  <div class="grid">

    <header class="login__header">
      <h2 class="login__title">Sign up</h2>
    </header>

    <div class="login__body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "login"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email %>
        </div>

        <div class="field">
 
          <%= f.password_field :password, autocomplete: "new-password", placeholder: :password %>

        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: :password_confirmation %><br />
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>

