<div class="pop-bar">
  <% @links.each_with_index do |link, index| %>
    <% if index % 4 == 0 %>
      <div class="pop-col articles">
        <div class="pop-padding">
    <% end %> 
        <h4>
          <%= link_to link.title, clicks_path(:link => link.id), :method => :post %>
        </h4>
        <div class="btn-group" role="group"  aria-label="Links">
          <%= link_to clicks_path(:link => link.id, :learn => true), :method => :post, class: "linkButton learnButton" do %>
            <%= inline_svg_tag("Learn") %>Learn
          <% end %>
          <%= link_to clicks_path(:link => link.id), :method => :post, class: "linkButton readButton" do %>
            <%= inline_svg_tag("Read", class: 'white-fill') %>Read
          <% end %>
        </div>
    <% if index % 4 == 3 %>
        </div>
      </div>
    <% end %> 
  <% end %>
</div>

