
<div class="userdash-container">
	<div class="profile-sidebar">
		<div class="user-email">
			<%= current_user.email %>
		</div>
		<div class="user-stats">
			<p>Words learned</p>
			<p class="stat-numbers"><%= @total_words %></p>
			<p>Articles read</p>
			<p class="stat-numbers"><%= @links.count %></p>
			
		</div>

	</div>
	<div class="profile-links">
		 <div class="btn-group">
		 	<%= link_to "Review all #{pluralize(StudyRecord.where("due < ?", Time.now).count, 'word') }", study_sets_path %>
		 </div>
		 <% @links.each_with_index do |link, index| %>
			<h4>
			  <%= link_to link.title, clicks_path(:link => link.id), :method => :post %>
			</h4>
			<div class="btn-group" role="group"  aria-label="Links">
			  <% study_set = link.study_sets.find_by(user_id: current_user.id) %>
			  <%= pluralize(study_set.study_records.where("due < ?", Time.now).count, 'word') %> due
			  <%= link_to "Add / Remove Words", link_entries_path(link.id, :edit => true), class: "btn btn-secondary btn-sm" %>
			  <%= link_to "Review Now", study_set_path(study_set) %>
			</div>
		<% end %>
	</div>
</div>